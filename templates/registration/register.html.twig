{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}










    <section id="login">
        <div class="container text-center col-md-5">
            <div class="card">
                <div class="row">
                    <div class="col-sm-12">
                        <h1>Register</h1>
                    </div>
                    <div class="col-sm-12">
                        <div class="card-body">
                                <div class="row justify-content-center">
                                    <div class="col-sm-9 justify-content-center">
                                        <div class="input-group mb-1">
                                            <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-envelope"></i></span>
                                            {{ form_row(registrationForm.email) }}
                                        </div>
                                    </div>
                                    <div class="col-sm-9">
                                        <div class="input-group mb-1">
                                            <span class="input-group-text" id="basic-addon1"><i class="fa-duotone fa-key"></i></span>
                                            {{ form_row(registrationForm.plainPassword, {
                                                label: 'Password'
                                            }) }}
                                        </div>
                                    </div>
                                    <div class="col-sm-9">
                                        <button type="submit" class="btn btn-outline-success w-100">Connexion</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section
{% endblock %}
