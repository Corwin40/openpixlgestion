{% extends 'base.html.twig' %}

{% block title %}Invoice index{% endblock %}

{% block content %}
    <h1>Invoice index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Num</th>
                <th>InvoiceAt</th>
                <th>Relation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for invoice in invoices %}
            <tr>
                <td>{{ invoice.id }}</td>
                <td>{{ invoice.num }}</td>
                <td>{{ invoice.invoiceAt ? invoice.invoiceAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ invoice.relation }}</td>
                <td>
                    <a href="{{ path('app_gestapp_invoice_show', {'id': invoice.id}) }}">Montrer</a>
                    <a href="{{ path('app_gestapp_invoice_edit', {'id': invoice.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Rien trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
