<div class="row">
    <div class="col-md-12">
        <table class="table">
            <caption>{{ listservices|length }} enregistrement</caption>
            <thead>
            <tr>
                <th><i class="fa-solid fa-folder"></i> Identifiant</th>
                <th><i class="fa-solid fa-tag"></i> Nom</th>
                <th><i class="fa-duotone fa-box-archive"></i> Etat</th>
                <th>Notes</th>
                <th>cr√©ation</th>
                <th>Echeance</th>
                <th>...</th>
            </tr>
            </thead>
            <tbody>
            {% for service in listservices %}
                <tr class="align-middle">
                    <td>{{ service.id }}</td>
                    <td>{{ service.nameService }}</td>
                    <td>{{ service.statut }}</td>
                    <td></td>
                    <td>{{ service.echeance |date('d-m-Y') }}</td>
                    <td>{{ service.createdAt |date('d-m-Y') }}</td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            <button id="btnGroupDrop1" type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Actions ...
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                <li><a class="dropdown-item" href=""><i class="fa-duotone fa-eye"></i> Voir</a></li>
                                <li><a class="dropdown-item" href=""><i class="fa-duotone fa-pen-to-square"></i> Editer</a></li>
                                <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#addstatutonclient" data-bs-whatever="{{ service.id }}"><i class="fa-light fa-file-lines"></i> Ajouter une intervention</a></li>
                                <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#Liststatutonclient-{{ service.id }}" data-bs-whatever="{{ service.id }}"><i class="fa-light fa-file-lines"></i> Afficher les interventions</a></li>
                                <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#SupprService" data-bs-whatever="{{ service.id }}"><i class="fa-solid fa-trash"></i> Supprimer</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>

            {% else %}
                <tr>
                    <td colspan="7">0 Enregistrement</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <!-- Modal ajout d'une intervention -->
        <div class="modal fade" id="Liststatutonclient-{{ service.id }}" tabindex="-1" aria-labelledby="Liststatutonclient" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Ajouter une intervention</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div id="ModalBodyListstatutonclient"class="modal-body">
                        {{ render(controller('App\\Controller\\Admin\\InterventionController::listeinterveonclient',{'idficheservice': service.id})) }}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <a id="btnListstatutonclient" class="btn btn-sm btn-primary btnListstatutonclient" data-bs-dismiss="modal">Ajouter</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
