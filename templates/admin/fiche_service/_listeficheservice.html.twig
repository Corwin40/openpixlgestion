<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
            <tr>
                <th><i class="fa-solid fa-folder"></i> Identifiant</th>
                <th><i class="fa-solid fa-tag"></i> Nom</th>
                <th><i class="fa-duotone fa-box-archive"></i> Etat</th>
                <th>Notes</th>
                <th>cr√©ation</th>
                <th>Echeance</th>
                <th> Voir & Editer</th>
            </tr>
            </thead>
            <tbody>
            {% for service in listservices %}
                <tr>
                    <td>{{ service.id }}</td>
                    <td>{{ service.nameService }}</td>
                    <td>{{ service.statut }}</td>
                    <td></td>
                    <td>{{ service.echeance |date('d-m-Y') }}</td>
                    <td>{{ service.createdAt |date('d-m-Y') }}</td>
                    <td>
                        <a class="btn" href=""><i class="fa-duotone fa-eye"></i> Voir</a>
                        <a class="btn" href=""><i class="fa-duotone fa-pen-to-square"></i> Editer</a>
                        <a class="btn" data-bs-toggle="modal" data-bs-target="#SupprService" data-bs-whatever="{{ service.id }}"><i class="fa-solid fa-trash"></i> Supprimer</a>
                        <a class="btn" data-bs-toggle="modal" data-bs-target="#addstatutonclient" data-bs-whatever="{{ service.id }}"><i class="fa-light fa-file-lines"></i> Ajouter un statut</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">0 Enregistrement</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
