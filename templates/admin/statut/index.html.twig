{% extends 'base.html.twig' %}

{% block title %}Statut index{% endblock %}

{% block body %}
    <h1>Statut index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Notes</th>
                <th>Prix</th>
                <th>Heures</th>
                <th>Auteur</th>
                <th>Début le </th>
                <th>Fini le</th>
            </tr>
        </thead>
        <tbody>
        {% for statut in statuts %}
            <tr>
                <td>{{ statut.id }}</td>
                <td>{{ statut.name }}</td>
                <td>{{ statut.notes }}</td>
                <td>{{ statut.price }}</td>
                <td>{{ statut.hours }}</td>
                <td>{{ statut.author }}</td>
                <td>{{ statut.startedAt }}</td>
                <td>{{ statut.finishedAt }}</td>
                <td>{{ statut.createdAt ? statut.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ statut.updatedAt ? statut.updatedAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_statut_show', {'id': statut.id}) }}">Voir</a>
                    <a href="{{ path('app_admin_statut_edit', {'id': statut.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">Enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn button"><a class="titre_h4" href="{{ path('app_admin_statut_new') }}">Crée un statut</a></button>
{% endblock %}
