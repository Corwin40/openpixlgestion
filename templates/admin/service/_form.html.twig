            </tr>
            <tr class="align-middle">
                <td class="table-light">{{ form_label(form.typoServ) }}</td>
                <td colspan="2">
                    {{ form_widget(form.typoServ, {'attr': {'class': 'form-select form-select-sm'}}) }}
                </td>
            </tr>
            <tr class="align-middle">
                <td class="table-light">{{ form_label(form.isActive) }}</td>
                <td colspan="2">
                    {{ form_widget(form.isActive) }}
                </td>
            </tr>
        </table>
