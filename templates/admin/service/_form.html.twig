                </td>
            </tr>
            <tr class="align-middle">
                <td class="table-light">{{ form_label(form.duration) }}</td>
                <td>
                    <div class="row">
                        <div class="col-4">{{ form_widget(form.duration, {'attr': {'class': 'form-control form-control-sm'}}) }}</div>
