{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <h1>Liste des Clients</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Code postal</th>
                <th>Téléphone</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.name }}</td>
                <td>{{ client.surname }}</td>
                <td>{{ client.address }}</td>
                <td>{{ client.city }}</td>
                <td>{{ client.postalCode }}</td>
                <td>{{ client.phone }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.createdAt ? client.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ client.updatedAt ? client.updatedAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('app_admin_client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">Enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <button type="button" class="btn button"><a class="titre_h4" href="{{ path('app_admin_client_new') }}">Crée un client</a></button>
{% endblock %}