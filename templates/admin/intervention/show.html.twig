{% extends 'base.html.twig' %}

{% block title %}Intervention{% endblock %}

{% block body %}
<section id="client_show">
    <div class="container-fluid">
        <div class="row title mt-4 mb-4">
            <div class="col-12">
                <h1>Intervention</h1>
            </div>
        </div>
        <div class="row g-1">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Nom</th>
                                <td>{{ intervention.name }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ intervention.description }}</td>
                            </tr>
                            <tr>
                                <th>Début</th>
                                <td>{{ intervention.startedAt ? intervention.startedAt|date('H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Fin</th>
                                <td>{{ intervention.finishedAt ? intervention.finishedAt|date('H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Crée le</th>
                                <td>{{ intervention.createdAt ? intervention.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Fini le</th>
                                <td>{{ intervention.updatedAt ? intervention.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                    <a class="btn" href="{{ path('app_admin_intervention_index') }}">Retour à la liste</a>

                    <a class="btn" href="{{ path('app_admin_intervention_edit', {'id': intervention.id}) }}">Editer</a>

                    {{ include('admin/intervention/_delete_form.html.twig') }}
                </div>
            </div>
        </div>



{% endblock %}
